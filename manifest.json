{
  "manifest_version": 2,
  "name": "WaniKani Notifier",
  "version": "0.2.4",

  "description": "An extension that notifies you when there are new reviews available at WaniKani.",

  "icons": {
    "12": "images/icon-12.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "web_accessible_resources": [
    "images/icon-48.png"
  ],

  "browser_action": {
    "default_icon": "images/icon-48.png"
  },

  "background": {
    "persistent": true,
    "scripts": [
      "javascripts/background.js"
    ]
  },

  "options_page": "pages/options.html",
  "permissions": [
    "https://www.wanikani.com/",
    "alarms",
    "tabs",
    "notifications",
    "storage",
    "idle",
    "webNavigation"
  ]
}
